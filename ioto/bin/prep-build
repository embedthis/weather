#!/usr/bin/env bash
#
#   prep-build - Make the required build directories, files and tools
#

if [ ! -d bin ] ; then
    echo "Must run from the top directory"
    exit 1
fi

mkdir -p state/certs state/site state/config state/db state/site

if [ ! -f bin/json ] ; then
    cc -DJSON_SOLO=1 -o bin/json bin/json.c -lm
fi

if [ ! -f "${BUILD}/bin/test.crt" ] ; then
    bin/make-certs
fi
